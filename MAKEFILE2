NAME		:=	so_long

CC			:=	cc -Ofast
CFLAGS		:=	-Wall -Werror -Wextra -g

SRC_DIR		:=	src
OBJ_DIR		:=	obj

SO_LONG_H	:=	incl

LIBFT_DIR	:=	./lib/libft
LIBFT_H		:=	$(LIBFT_DIR)/incl
LIBFT_A		:=	$(LIBFT_DIR)/libft.a

MLX_DIR		:=	./lib/MLX42
MLX_H		:=	$(MLX_DIR)/include
MLX_A		:=	$(MLX_DIR)/build/libmlx42.a

LIBS		:=	$(LIBFT_DIR)/libft.a $(MLX_DIR)/build/libmlx42.a -ldl -lglfw -pthread -lm

HEADERS		:=	-I $(SO_LONG_H) -I $(LIBFT_H) -I $(MLX_H)

SRC_FILES	:=	$(addprefix $(SRC_DIR)/, \
				main.c)

OBJ_FILES	:=	$(addprefix $(OBJ_DIR)/, $(SRC_FILES:.c=.o))

LIBFT		:=	libft.a

.PHONY : all clean fclean re

all: $(MLX_A) $(LIBFT_A) $(NAME)

$(MLX_A): $(MLX_H)
	make $(MLX_DIR) -B $(MLX_DIR)/build && make -C $(MLX_DIR)/build -j4 > /dev/null

$(LIBFT_A): $(LIBFT_H)
	make -C $(LIBFT_DIR) > /dev/null

submodule:
	git submodule update --init --recursive --remote

$(NAME) : $(OBJ_FILES)
	$(CC) $(OBJ_FILES) $(CFLAGS) $(HEADERS) $(LIBS) -o $(NAME)

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	mkdir -p $(OBJ_DIR)
	$(CC) $(CFLAGS) -I $(HEADERS) -c $< -o $ 

norminette:
	echo "${CYAN}ðŸ§ Checking the Norm...${RESET}"
	norminette -R CheckForbiddenSourceHeader
	echo "${GREEN} Norm-i-netting complete. Files are NORM PROOF!${RESET}" 

clean:
	rm -rf $(OBJ_FILES)
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

## Colors ##
RESET	:= \033[0m
RED		:= \033[1;91m
GREEN	:= \033[1;92m
YELLOW	:= \033[1;93m
BLUE	:= \033[1;94m
PURPLE	:= \033[1;95m
CYAN	:= \033[1;96m
WHITE	:= \033[1;97m
BLACK	:= \033[1;90m